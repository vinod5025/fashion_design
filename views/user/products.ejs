<%- include("navbar.ejs"); %>

<!-- Body -->
<div class="py-5">
  <div class="container py-4">

    <!-- All Products -->
    <div>
      <div class="row align-items-center justify-content-between mb-3">
        <div class="col-auto">
          <h4 class="fw-bold mb-0 text-center">All Products</h4>
        </div>
      </div>

      <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-2 g-4">
        <% products.map((row, i) => { %>
        <div class="col">
          <div class="card bg-transparent border-0 rounded-0 h-100 product">
            <!-- Image -->
            <div class="position-relative" style="overflow: hidden; height: 300px;border-radius: 15px;">
              <img 
                src="/uploads/<%- row.product_image1 %>" 
                class="card-img-top rounded-0 w-100 h-100" 
                alt="<%- row.product_name %>"
                style="object-fit: cover;"
              >
              <div class="overlay position-absolute start-0 end-0 top-0 bottom-0 opacity-0 bg-dark bg-opacity-75 d-flex align-items-center h-100">
                <div class="d-flex align-items-center gap-3 position-absolute bottom-0 w-100 p-3">
                  <a href="/product_details/<%- row.product_id %>" class="btn btn-light btn-sm rounded-0 border-2 d-flex align-items-center justify-content-between w-100">
                    <i class="ri-shopping-bag-line"></i>
                    <div>View</div>
                    <span class="px-1"></span>
                  </a>
                </div>
              </div>
            </div>

            <!-- Product Info -->
            <div class="card-body pb-0 px-0">
              <h6 class="card-title text-truncate mb-1"><%- row.product_name %></h6>
              <p class="card-text text-secondary-emphasis mb-0">Size: <%- row.product_size %></p>
            </div>
            
            <!-- Footer -->
            <div class="card-footer bg-transparent border-0 px-0">
              <h6 class="mb-0">â‚¹ <%- row.product_price %> /-</h6>
            </div>
            <a href="/product_details/<%- row.product_id %>" class="stretched-link"></a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include("footer.ejs"); %>
