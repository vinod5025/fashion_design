              <a class="nav-link active text-uppercase" href="/">Home</a>
            </li>
            <li class="nav-item dropdown mega-menu">
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase" href="/products?product_type=Mens">Men</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase" href="/products?product_type=Womens">Womens</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase" href="/products?product_type=Kids">Kids</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-uppercase" href="/products?product_type=Others">Others</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link text-uppercase" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Blog <i class="ri-arrow-down-s-line"></i>
              </a>
              <ul class="dropdown-menu shadow-sm px-2 py-1 border-0 m-0 rounded-0">
                <li>
                  <a class="dropdown-item px-2 py-1 my-1 rounded-0" href="/blog">Blog</a>
                </li>
                <li>
                  <a class="dropdown-item px-2 py-1 my-1 rounded-0" href="/blog-detail">Blog Detail</a>
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link text-uppercase" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">More Pages <i class="ri-arrow-down-s-line"></i>
              </a>
              <ul class="dropdown-menu shadow-sm px-2 py-1 border-0 m-0 rounded-0">
                <li>
                  <a class="dropdown-item px-2 py-1 my-1 rounded-0" href="/about-us">About</a>
                </li>
                <li>
                  <a class="dropdown-item px-2 py-1 my-1 rounded-0" href="/contact-us">Contact Us</a>
                </li>
                <li>
                  <a class="dropdown-item px-2 py-1 my-1 rounded-0" href="/faq">FAQ</a>
                </li>
              </ul>
            </li>
          </ul>
          <div class="d-flex align-items-center gap-4">
    
            <% if(is_login){ %>
              <a href="/user_profile">
                <i class="ri-account-circle-line ri-lg">Profile</i>
              </a>
              <a href="/cart">
                <i class="ri-shopping-cart-2-line ri-lg">Cart</i>
              </a>
            <% }
            else 
            { %>
                <a href="#" class="link-dark">
                  <i class="ri-account-circle-line ri-lg" data-bs-toggle="modal" data-bs-target="#login"></i>
                </a>
              <% } %>
          </div>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
