<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/user/img/logo.svg">
    <title>Fashion Design</title>
    <meta name="description" content="pillarix">
    <meta name="keywords" content="pillarix">
    <!-- Bootstrap Css -->
    <link rel="stylesheet" href="/user/vender/bootstrap/css/bootstrap.min.css">
    <!-- Remix icons -->
    <link rel="stylesheet" href="/user/vender/remixicon/remixicon.css">
    <!-- Swiper Slider Css -->
    <link rel="stylesheet" href="/user/vender/swiper-js/swiper-bundle.min.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="/user/css/style.css">
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-white osahan-nav p-0 border-bottom">
      <div class="container-fluid px-3">
        <a class="navbar-brand py-3 pe-3 border-end" href="/">
          <img src="/uploads/<%=logo.navbar_logo%>" alt="logo" class="img-fluid logo">
        </a>
        <div class="home1_style d-none d-lg-block ps-3">
          <div id="mega-menu">
            <a class="link-dark fw-bold text-uppercase" href="/">
              <i class="ri-layout-grid-fill ri-lg me-1"></i> Categories 
            </a>
        
          <ul class="menu list-unstyled ps-0">
            <% cats.forEach((row, i) => { %>
              <li>
                <a class="dropdown link-dark d-flex align-items-center gap-2" href="/products?category_id=<%-row.category_id%>">
                  <%= row.category_name %> 
                </a>
              </li>
            <% }) %>
            
          </div>
        </div>
   
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 osahan-nav-navbar-nav">
