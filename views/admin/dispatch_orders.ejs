<%- include('navbar.ejs') ; %>

<div class="container mt-5 card-body shadow bg-white rounded">
    <div class="row p-3 m-1">
        <div class="col">
            <h1 class="text-center mb-4 heading ">Dispatch Orders</h1>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Order Date</th>
                            <th>Total</th>
                            <th>Payment Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dispatch_orders.map((row,i)=>{ %>
                        <tr>
                            <td><%=row.order_id%></td>
                            <td><%=row.full_name%></td>
                            <td><%=row.order_date%></td>
                            <td><%=row.total%></td>
                            <td><%=row.payment_staus%></td>
                            <td>
                                <a href="/admin/order_details/<%=row.order_id%>">
                                      <button class="btn btn-sm btn-success">Details</button>
                                </a>
                            </td>
                        </tr>
                       <% }) %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('footer.ejs') ; %>