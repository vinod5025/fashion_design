<%- include("navbar.ejs"); %>
<form action="/admin/update_brand/<%-brands[0].brand_id%>" method="post" enctype="multipart/form-data">
    <div class="container-fluid card card-body">
        <div class="row">
            <div class="col-md-12 ">
                <h2 class="heading">Edit Brand</h2>
            </div>
            <div class="col-md-6 mt-3 mb-1">
                <b>Brand Name :-</b>
                <input type="text"  name="brand_name" value="<%-brands[0].brand_name%>" va class="form-control"> 
            </div>
            <div class="col-md-4 mt-3 mb-1">
                <b>Brand Image:-</b>
                <input type="file" name="brand_image" class="form-control" accept="image/*"></input> 
            </div>
            <div class="col-md-2 mt-3 mb-1">
                <img src="/uploads/<%-brands[0].brand_image%>" width="100px">
            </div>
            <div class="col-md-6 mt-3 mb-3">
                <b>Brand Details:-</b>
                <textarea  rows="1" name="brand_details"class="form-control"><%-brands[0].brand_details%></textarea> 
            </div>
            <div class="col-md-6 mt-3 mb-3 ">
                <br>  
                <button class="btn btn-primary">Update Brand</button>
            </div>
        </div>
    </div>
</form>
<%- include("footer.ejs"); %>