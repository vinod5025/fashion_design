<%-include('navbar.ejs')%>

<form action="/admin/update_navbar" method="post" enctype="multipart/form-data">
    <div class="container-fluid card card-body">
        <div class="row">
            <div class="col-md-12 ">
                <h2 class="heading">Update Navbar</h2>
            </div>
            <div class="col-md-6 mt-3 mb-5">
                <b>Update Navbar Logo</b>
                <input type="file" accept="image/*" name="navbar_logo" required class="form-control rounded-pill border-primary"> 
            </div>
            <div class="col-md-6  mt-5 mb-5 text-center">  
                <button class="btn btn-primary">Update Navbar Logo</button>
            </div>
        </div>
    </div>
</form>


<div class="container-fluid mt-5 mb-5 card card-body">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading">Navbar Details</h3>
        </div>
        <div class="col-md-4 mt-3 text-center">
            <img src="/uploads/<%=logo.navbar_logo%>" width="100px">
        </div>
    </div>
</div>


