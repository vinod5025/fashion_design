<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Profile Info Popup</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

  <!-- Trigger button to open the modal -->
  <div class="container mt-5 text-center">
    <button type="button" class="btn btn-primary" id="viewProfileButton">
      View Admin Profile
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="profileModalLabel">Admin Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <!-- Alert Message -->
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Welcome Back!</strong> You have successfully logged in.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Reminder:</strong> Update your profile information if necessary.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <!-- Profile Information -->
          <div class="mb-3">
            <strong>Name:</strong> <span class="text-muted"><%-admin_info.admin_name%></span>
          </div>
          <div class="mb-3">
            <strong>Email:</strong> <span class="text-muted"><%-admin_info.admin_email%></span>
          </div>
          <div class="mb-3">
            <strong>Mobile:</strong> <span class="text-muted"><%-admin_info.admin_mobile%></span>
          </div>
          <div class="text-center">
            <button class="btn btn-warning">Edit Profile</button>
            <button class="btn btn-danger">Logout</button>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Automatically trigger the modal when "View Admin Profile" is clicked
    document.getElementById('viewProfileButton').addEventListener('click', function () {
      const profileModal = new bootstrap.Modal(document.getElementById('profileModal'));
      profileModal.show();
    });
  </script>

</body>

</html>


