<%- include('navbar.ejs'); %>
<form action="/admin/add_brand" method="post" enctype="multipart/form-data">
    <div class="container-fluid card card-body">
        <div class="row">
            <div class="col-md-12 ">
                <h2 class="heading">Add Brand</h2>
            </div>
            <div class="col-md-6 mt-3 mb-3">
                <b>Brand Name :-</b>
                <input type="text"  name="brand_name" class="form-control border-primary rounded-pill"> 
            </div>
            <div class="col-md-6 mt-3 mb-3">
                <b>Brand Image:-</b>
                <input type="file" name="brand_image" class="form-control border-primary rounded-pill" accept="image/*"></input> 
            </div>
            <div class="col-md-6 mt-3 mb-3">
                <b>Brand Details:-</b>
                <textarea  rows="1" name="brand_details" class="form-control border-primary rounded-pill"></textarea> 
            </div>
            <div class="col-md-6 mt-3 mb-3 ">
                <br>  
                <button class="btn btn-primary rounded-pill">Add Brand</button>
            </div>
        </div>
    </div>
</form>

<div class="container-fluid mt-5 mb-5 card card-body table-responsive">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading">Brand List</h3>
        </div>
        <div class="col-md-12 mt-5 mb-5 text-center">
            <table class="table table-hover shadow" style="text-align: middle;white-space: nowrap;">
                <tr>
                    <th>Action</th>
                    <th>Sr.No.</th>
                    <th>Brand Name</th>
                    <th>Brand Details</th>
                    <th>Brand Image</th>
                </tr>
                <% brands.map((row,i)=>{ %>
                    <tr>
                        <td style="white-space: nowrap;">
                            <button class="btn btn-secondary">
                              <a href="/admin/edit_brand/<%-row.brand_id%>"><i class="fa fa-edit"></i></a>
                            </button>
                            <button class="btn btn-danger">
                              <a href="/admin/delete_brand/<%-row.brand_id%>" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
                            </button>
                          </td>
                        <td><%-i+1%></td>
                        <td><%-row.brand_name%></td>
                        <td><%-row.brand_details%></td>
                        <td>
                            <img src="/uploads/<%-row.brand_image%>" width="100px">
                        </td>
                    </tr>
                <% }) %>
                  
            </table>
        </div>
    </div>
</div>
<%- include('footer.ejs'); %>